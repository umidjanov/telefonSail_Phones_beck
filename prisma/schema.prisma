generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin {
  id String @id @unique @default(cuid())
}

model telefon_turlari {
  id         String       @id @unique @default(cuid())
  title      String       @unique
  telefonlar telefonlar[]
}

model telefonlar {
  id               String          @id @unique @default(cuid())
  title            String
  price            Int
  color            String
  img              String
  desc             String
  telefon_turlari  telefon_turlari @relation(fields: [telefonlarTuriId], references: [id])
  xotirasi         Int
  telefonlarTuriId String
}

model User {
  id       String @id @unique @default(cuid())
  username String @unique
  password String
}
